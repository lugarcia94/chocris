            display: block
            width: 15px
            height: 15px
            background-repeat: no-repeat
            background-size: 10px
            background-position center

            @media(max-width 991px)
                background-size: auto
                width 20px
                height 30px

    .minicart-qtde-itens
        font-size 8px!important
        text-shadow 0 0 
        height: auto!important
        line-height: 0!important
        font-family 'Muli'
        color #0d0f0f
        line-height: 0 !important;
        font-family: 'Muli';
        color: #0d0f0f;
        padding: 0;
        top: 0;
        bottom: 0;
        right: 0;
        position: relative;
        float: none;
        width: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top 3px

        @media(max-width 991px)
            font-size 12px!important 

        &:before, &:after
            display none


@media(min-width 992px)
    
    .header ul.menu li.item
        position static

        &:hover
            .product__menu
                display flex

    .header__mainbar-menu .menu li.item.raiz ul.filho
        position relative!important
        column-count: 2
        width 50%!important
        top 0
        padding 30px
        border none
        display block!important

        li
            a
                justify-content flex-start

                &:hover
                    color: #a8763c

    .product__menu 
        position: absolute
        width: 100%
        background: #fff
        display: none
        left: 0
        align-items: center

        img
            width 50%

    .menu li.item.raiz>ul.filho 
        li
            a
                &:hover
                    color: #a8763c
    