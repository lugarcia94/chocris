    display: flex
    align-items: center
    justify-content: space-between
    flex-wrap: wrap

.category__btn-text
    background-repeat: no-repeat
    background-position: 95%
    width: 100%
    background-image: url('data:image/png;base64,')

.ac_over 
    background: #b18450!important
    color: #EEE


