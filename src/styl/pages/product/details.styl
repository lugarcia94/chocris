.product__details
    width: 100%
    max-width: 560px
    display: flex
    flex-wrap: wrap
    justify-content: space-between

    @media(max-width: 1250px)
        justify-content flex-end
        max-width 50%

    .product__details-topo
        flex: 0 0 400px

        @media(max-width: 991px)
            display: flex
            flex-wrap: wrap
            justify-content: space-between
            max-width 100%
            flex 1 1 auto
            min-width 0px

            .product__reviews
                width 100%

                .avaliacao
                    justify-content: center

            .product__name
                order 0
                flex: 0 0 100%
            .product__price
                order 1
                margin-top 0
                flex: 0 0 100%

            .atrib__description
                order: 2
                flex: 0 0 100%

            .product__details-variation
                order: 3
                max-width 100%
                flex: 0 0 100%
                margin: 0

            .fbits-comprar
                order 4
                flex: 0 0 100%

            .alerta__frete
                order: 5
                flex: 0 0 100%
                flex-wrap: wrap
                margin: 0
                padding: 15px
                
    .left__prod, .right__product
        max-width 265px
        width 100%
        @media(max-width: 1199px)
            max-width: 48%
        @media(max-width: 520px)
            max-width 100%
    
    .right__product--sticky
        position: -webkit-sticky
        position: sticky
        top: 0

    .left__prod
        padding-top 15px

    @media(max-width: 991px)
        max-width 100%
        margin: 0
        margin-top 20px

    @media(max-width: 767px)
        max-width 100%

    .produtoInfo-title
        display: inline-block

    .fbits-produto-nome
        font-size: 20px
        line-height: normal
        color: #000000
        text-transform: none
        width: 100%  
        font-weight: 400 

        @media(max-width: 767px)
            text-align: left

    .avalie-top
        text-decoration: none
        color: #333333
        font-weight: 400
        text-transform: capitalize
        font-size: 13px

    .fbits-sku
        font-size 10px
        font-weight: 400
        color: #7f7f7f
        text-align: right
        line-height: normal
        display: flex
        align-items: center
        font-size: 12px
        text-transform: none
        height auto

        @media(max-width: 767px)
            width 100%

    .product__garantia
        margin-top 2px

        span
            font-size: 12px
            color: #333333
            line-height: 14px

    .product__details-code
        display: flex
        width: 100%
        align-items: center
        max-height: 16px

    .product__marca 
        font-size: 13px
        color: #3e3e3e
        margin-right 20px


    .fbits-etiquetas-sequencial
        display: flex
        width: 100%
        margin: 0 -2.5px
        align-items: flex-start
        @media(max-width: 768px)
            margin-bottom: 15px
        >*
            margin: 5px 2.5px !important


        .fbits-preco-off
            display: none


    @media(min-width: 769px)
        .short02
            display: none !important
    @media(max-width: 768px)
        .short01
            display: none !important


    .short-description
        font-size: 13px
        line-height: 16px
        font-weight: 400
        color: #ababab
        overflow: hidden
        height: 50px
        width: 100%
        margin: 10px 0
        @media(max-width: 768px)
            margin:0 0 10px 0

    .btn-short-description
        display: flex
        align-items: center
        color: $cor01
        font-size: 13px
        line-height: 16px
        font-weight: 600
        width: 100%
        position: relative
        @media(max-width: 768px)
            padding: 15px 0
            margin-bottom: 10px

            &:after
                content: ''
                height: 1px
                position: absolute
                bottom: 0
                left: 50%
                width: 100%
                max-width: 1170px
                -webkit-transform: translateX(-50%)
                transform: translateX(-50%)
                background-color: #e9e9e9
                opacity: 0.6
                box-shadow: 0.656px 0.755px 3px 0px rgba(29,28,28,0.16)

        &:before
            @extend $ico-before
            // background-image svg-inline(closeMenu)
            background-size: 11px 13px
            width: 11px
            margin-right: 5px


.product__shipping
    display: flex   
    position: relative
    align-items: center
    justify-content: space-between
    flex-wrap  wrap
    width: 100%
    margin-top: 20px

    &--title
        font-size 12px
        font-weight 500
        color #DEA345
        cursor pointer
        display flex
        align-items: center

        &:before
            content ''
            background-image: url('data:image/png;base64,')
            width: 15px
            height: 15px
            display: block;
            background-repeat: no-repeat
            background-size: 13px
            background-position: center
            margin-right 3px


    &--content 
        width 100% 
        display: none
        background #f7f7f7
        padding 10px
        margin-top 10px

        > span
            font-size 10px
            color #0d0f0f
            text-shadow 0 0 
    

    .details-content
        display: flex !important
        flex-wrap: wrap

    #txtCalculaFreteProduto
        border: 1px solid #e0e0e0
        height: 45px
        border-radius: 1px
        width: 70%
        font-size: 15px
        color: #0d0f0f
        background transparent
 

    .carrinhoInputBlock
        display: flex 
        flex-wrap: wrap
        padding-bottom 20px
        position relative
        
    #btnCalculaFreteProduto
        background: #1a1a1a
        color:#fff
        font-size: 18px
        font-weight: 700
        text-transform: none 
        border: 1px solid #1a1a1a
        height: 45px
        width: 25%
        margin-left 5%
        text-transform: lowercase
        font-weight: 700 

    #naoSeiCep
        position: absolute
        top: -15px
        right: 0
        font-size: 8px
        color: #808080
        font-weight: 400
        text-shadow 0 0
        text-transform: none
        text-decoration none

        @media(max-width: 767px)
            left 50%
            transform: translateX(-50%)
            text-align: center

    .summary
        display: none
    .simule
        font-size: 0
        line-height: 0
        display: flex
        align-items: center
        margin-bottom: 0
        margin-top 0
        width: 34%
        padding: 0
        display none
 

.on__frete
