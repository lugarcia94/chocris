    width: 100%
    a
        h3
            color: #434343 !important
            font-size: 35px
            font-weight: 700
            text-decoration: none  
            display: flex
            align-items: center
            justify-content: center
            z-index 2


            &:before
                content: ''
                background: $cor01
                width: 100%
                height: 1px
                position: absolute
                z-index -1

            &:after
                background: #fff
                z-index -1
                position: absolute
                left 50%
                transform: translateX(-50%)
                content: ''
                width 30%
                height 50px

            @media(max-width: 992px)
                font-size: 23px

                &:before, &:after
                    display: none
  
