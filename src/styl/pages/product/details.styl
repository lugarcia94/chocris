.product__details
    width: 100%
    max-width: 301px
    display: flex
    flex-wrap: wrap
    justify-content: space-between

    @media(max-width: 1250px)
        max-width 24%

    .product__details-topo
        flex: 0 0 100%

        @media(max-width: 992px)
            display: flex
            flex-wrap: wrap
            justify-content: space-between
            max-width 100%

            .product__reviews
                width 100%

                .avaliacao
                    justify-content: center

            .product__name
                order 0
                flex: 0 0 100%
            .product__price
                order 1
                margin-top 0
                flex: 0 0 100%

            .atrib__description
                order: 2
                flex: 0 0 100%

            .product__details-variation
                order: 3
                max-width 100%
                flex: 0 0 100%
                margin: 0

            .fbits-comprar
                order 4
                flex: 0 0 100%

            .alerta__frete
                order: 5
                flex: 0 0 100%
                flex-wrap: wrap
                margin: 0
                padding: 15px
                
    .left__prod, .right__product
        max-width 265px
        width 100%
        @media(max-width: 1199px)
            max-width: 48%
        @media(max-width: 520px)
            max-width 100%
    
    .right__product--sticky
        position: -webkit-sticky;
        position: sticky;
        top: 0;

    .left__prod
        padding-top 15px

    @media(max-width: 991px)
        max-width 45%
        margin: 0
        margin-top 20px

    @media(max-width: 767px)
        max-width 100%

    .produtoInfo-title
        display: inline-block

    .fbits-produto-nome
        font-size: 20px
        line-height: 25px
        color: #333 
        text-transform: none
        width: 100%  
        font-weight: 500 

        

        @media(max-width: 767px)
            text-align: center

    .avalie-top
        text-decoration: none
        color: #333333
        font-weight: 400
        text-transform: capitalize
        font-size: 13px

    .fbits-sku
        font-weight: 400
        color: #333333
        text-align: right
        line-height: 10px
        display: flex
        align-items: center
        font-size: 12px
        text-transform: none
        height auto

        @media(max-width: 767px)
            width 100%

    .product__garantia
        margin-top 2px

        span
            font-size: 12px
            color: #333333
            line-height: 14px

    .product__details-code
        display: flex
        width: 100%
        align-items: center
        max-height: 16px

    .product__marca 
        font-size: 13px
        color: #3e3e3e
        margin-right 20px


    .fbits-etiquetas-sequencial
        display: flex
        width: 100%
        margin: 0 -2.5px
        align-items: flex-start
        @media(max-width: 768px)
            margin-bottom: 15px
        >*
            margin: 5px 2.5px !important


        .fbits-preco-off
            display: none


    @media(min-width: 769px)
        .short02
            display: none !important
    @media(max-width: 768px)
        .short01
            display: none !important


    .short-description
        font-size: 13px
        line-height: 16px
        font-weight: 400
        color: #ababab
        overflow: hidden
        height: 50px
        width: 100%
        margin: 10px 0
        @media(max-width: 768px)
            margin:0 0 10px 0

    .btn-short-description
        display: flex
        align-items: center
        color: $cor01
        font-size: 13px
        line-height: 16px
        font-weight: 600
        width: 100%
        position: relative
        @media(max-width: 768px)
            padding: 15px 0
            margin-bottom: 10px

            &:after
                content: ''
                height: 1px
                position: absolute
                bottom: 0
                left: 50%
                width: 100%
                max-width: 1170px
                -webkit-transform: translateX(-50%)
                transform: translateX(-50%)
                background-color: #e9e9e9
                opacity: 0.6
                box-shadow: 0.656px 0.755px 3px 0px rgba(29,28,28,0.16)

        &:before
            @extend $ico-before
            // background-image svg-inline(closeMenu)
            background-size: 11px 13px
            width: 11px
            margin-right: 5px


.product__shipping
    display: inline-block 
    width: 100%
 
    .details-content
        display: flex !important
        flex-wrap: wrap

    #txtCalculaFreteProduto
        border: 1px solid #E7E7E7
        height: 40px
        border-radius: 1px
        width: 50%
        font-size: 15px
        color: #979797

        @media(max-width: 767px)
            width 46%

    .carrinhoInputBlock
        display: flex 
        flex-wrap: wrap
        padding-bottom 20px
        position relative
        
    #btnCalculaFreteProduto
        background: #373535
        color:#fff
        font-size: 18px
        font-weight: 700
        text-transform: none 
        border: 1px solid #373535
        height: 40px
        width: 16%
        text-transform: lowercase
        font-weight: 700 

    #naoSeiCep
        position: absolute
        bottom: 0
        right: 0
        font-size: 12px
        color: #A9A9A9
        font-weight: 700
        text-transform: none

        @media(max-width: 767px)
            left 50%
            transform: translateX(-50%)
            text-align: center

    .summary
        display: none
    .simule
        font-size: 0
        line-height: 0
        display: flex
        align-items: center
        margin-bottom: 0
        margin-top 0
        width: 34%
        padding: 0

        &:before
            content: 'Calcule o frete'
            text-transform: none
            color: #333333
            font-size: 14px
            line-height: 17px 
            font-weight: 600


.resultado-frete
    margin-top 10px

.produto .resultado-frete tr td:first-child, .produto .resultado-frete tr td:last-child
    background: #fff!important

.product__reviews
    .avaliacao
        display: flex!important

    .star, .starEmpty
        text-align: left

.ui-slider-tabs-content-container
    border: none!important
    height auto!important

.ui-slider-tabs-list-wrapper
    margin: 0 0 20px 0 !important

.ui-slider-tabs-list li
    border: none!important
    min-height: 40px!important
    padding: 0 20px!important
    padding: 0!important

    &:hover
        background: none!important

    a  
        line-height: 40px!important

        h3
            color: #848181
            font-size: 1.56rem
            font-weight: 400
            text-transform: none
            text-transform: uppercase


.conteudoAbasProduto 
    p 
        font-size: 12px
        color: #353535
        line-height: 29px


.ui-slider-tabs-list li.selected
    background: none!important
    width: 100%
    a
        h3
            color: #434343 !important
            font-size: 35px
            font-weight: 700
            text-decoration: none  
            display: flex
            align-items: center
            justify-content: center
            z-index 2


            &:before
                content: ''
                background: $cor01
                width: 100%
                height: 1px
                position: absolute
                z-index -1

            &:after
                background: #fff
                z-index -1
                position: absolute
                left 50%
                transform: translateX(-50%)
                content: ''
                width 30%
                height 50px

            @media(max-width: 992px)
                font-size: 23px

                &:before, &:after
                    display: none
  
.ui-slider-tab-content
    padding: 0!important

    .paddingbox
        > span  
            font-size: 14px
            color: #3D161D
            font-weight: 600
            padding-left 15px
            display: block 
            margin: 30px 0
            line-height: 16px

            @media(max-width: 992px)
                padding: 0

        > ul  
            margin-top 20px

            >li  
                font-size: 14px
                color: #1E1E1E 
                line-height: 16px
                padding-left: 30px

                ul  
                    display: flex
                    min-height 44px

                    li  
                        display: flex
                        align-items: center
                        font-weight: 100

                        &:first-child
                            font-weight: 600
                            width 20%
                        
                &:nth-child(2n + 1)
                    background: #F6F6F6

.paddingbox, .fbits-produto-informacoes-extras
    font-size: 14px
    color: #333333
    line-height: 18px
    font-family: 'Muli'
    text-align: left

    iframe 
        @media(min-width: 992px)
            width: 100%
            height: 480px

    p
        font-size: 14px
        color: #333333
        line-height: 18px
        font-family: 'Muli'
        text-align: left
 
    h2
        font-size: 18px
        font-weight: 700
        color: #434343
        margin-top 35px 
        margin-bottom 15px
 
.tabela__medidas-container
    ul
        display: flex
        max-height: 40px
        width 100%

        &:nth-child(2n + 1)
            background: #F4F4F4

        li
            flex: 0 0 30%
            font-size: 14px
            color: #434343 
            line-height: 40px
            padding-left 5px
            font-weight: 700

            @media(max-width: 767px)
                flex: 0 0 50%


.produto .fbits-avaliacao
    @media(max-width: 767px)
        width 100%