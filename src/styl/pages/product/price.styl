    .fbits-preco-off
        margin: 0 0 0 5px

    .precoVista
        text-transform: none
        display: none
        .fbits-boleto-ou
            display: none

        .fbits-boleto-preco
            color: #00d833
            font-size: 15px
            font-weight: 600

        .fbits-boleto-avista,
        .fbits-boleto-desconto
            font-size: 12px
            color: #3e3e3e


    .product__price-installments
        font-size: 12px
        color: #3e3e3e
        margin-bottom: 2px
        width: 100%

        .numeroparcelas,
        .parcelax,
        .parcelavalor,
        span.parcelade
            font-weight: 600
            color: $cor01
            font-size: 16px
        
        .parcelajuros
            display: none
 

