.produto-comprar
    display none
    a
        background: #4AC87A
        cursor: pointer
        color: #fff
        font-size: 0!important 
        font-weight: 600
        border-radius: 2px
        align-items: center
        justify-content: center
        text-transform: uppercase
        display: flex
        height: 50px
        width: 100%
