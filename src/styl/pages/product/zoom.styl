.product__zoom
    width: 100%
    max-width: 620px
    display: flex
    justify-content: space-between
    align-items: flex-start 
    position relative

    @media(max-width: 1250px)
        max-width 45%

    @media(max-width: 992px)
        max-width 100%

        .fbits-componente-imagem
            display: none
  
    .verDetalhes
        display: none

    .etiqueta__produto
        z-index: 1    

        #fbits-div-preco-off
            display: block!important
            

.product__price
    .fbits-comprar 
        display: none


.product__tag
    position: absolute
    right 15px
    top: 15px
    z-index 1

.fbits-componente-imagem
    max-width 530px

    iframe 
        width 100%

    @media(max-width: 1250px)
        max-width 100%

    @media(max-width 991px)
        margin: 0 auto
 

#galeria 
    a  
 
        img     
            @media(max-width 992px)
                max-width 100%!important 

    .slick-next, .slick-prev 
        position: absolute
        background-color: transparent

    .slick-arrow
        width 85px!important
        height 30px

    .slick-next
        bottom -20px
        font-size: 0
        background-image: url('data:image/png;base64,')!important
        transform: scale(1)!important 
        background-position: center

        @media(max-width: 992px)
            right -20px!important 
            transform: rotate(-90deg)!important
            bottom: 0!important 
            top: 50%

    .slick-prev
        top: -40px
        font-size: 0
        background-image: url('data:image/png;base64,')!important
        transform: scale(-1) 
        background-position: center

        @media(max-width: 992px)
            left -20px!important 
            transform: rotate(90deg)!important
            bottom: 0!important 
            top: 50%